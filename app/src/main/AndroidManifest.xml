<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arkadeepdey.lifesavior">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ls"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ls_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Emergency" />
        <activity android:name=".DonarFetch" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity android:name=".Register" />
        <activity android:name=".Profile" />
        <activity android:name=".AboutDev" />
        <activity android:name=".CountDonar" />
        <activity android:name=".Info" />
        <activity android:name=".AddRequest" />
        <activity android:name=".Request" />
        <activity android:name=".mVideo"></activity>
    </application>

</manifest>